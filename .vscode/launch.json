{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Auto-Reload",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/skinspire_v2_env/Scripts/python.exe",
            "env": {
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development",
                "TEMPLATES_AUTO_RELOAD": "True"
            },
            "justMyCode": true
        }
    ]
}